<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <%= form_with model: @evaluated, local: true, html: {class: "bootstrap-form"} do |form| %>
      <div class="form-information">
        <%= form.label :name, "Nome" %>
        <%= form.text_field :name, class: "form-control", required: true %>
      </div>

      <div class="form-information">
        <%= form.label :cpf, "CPF" %>
        <%= form.text_field :cpf, class: "form-control",  pattern: "[0-9]*", required: true %>
        <% if @evaluated.errors[:cpf].any? %>
          <p class="text-danger"><%= @evaluated.errors[:cpf].first %></p>
        <% end %>
      </div>

      <div class="form-information">
        <%= form.label :email, "E-mail" %>
        <%= form.email_field :email, class: "form-control", required: true %>
      </div>

      <div class="form-information">
        <%= form.label :birth_date, "Data de Nascimento" %>
        <%= form.date_field :birth_date, class: "form-control", required: true %>
      </div>

      <div class="form-group mt-3">
        <%= form.submit 'Enviar', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
